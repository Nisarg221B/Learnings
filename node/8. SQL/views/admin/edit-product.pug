extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content
        main
        form.product-form(action=`/admin/${editing === true ? 'edit-product' : 'add-product'}`,method="post")
            div.form-control
                label(for="title") Title 
                -let titlePlaceholder = (editing === true) ? product.title : '';
                input(type="text",name="title", value = titlePlaceholder)#title
            div.form-control
                label(for="imageUrl") Image URL 
                input(type="text",name="imageUrl", value = (editing === true) ? product.imageUrl : '')#imageUrl
            div.form-control 
                label(for="price") Price 
                input(type="numbr",name="price",step="0.01", value = (editing === true) ? product.price : '')#price
            div.form-control
                label(for="description") Description 
                textarea(name="description")#description #{ (editing === true) ? product.description : ''}
            if editing 
                input(type="hidden" value=product.id , name = "productId")
            button.btn(type='submit') #{editing === true ? 'Update Product' : 'Add Product'}